<!-- app/views/employees/_personal_form.html.erb -->
<%#= form_with(model: employee, url: personal_info_employee_path(employee), method: :put) do |form| %>
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<div class="container mx-auto bg-white shadow-lg p-6 rounded-lg">
  <h2 class="text-xl font-semibold mb-4">Personal Information</h2>
<%= form_with(model: employee, url: employees_path, method: :post) do |form| %>
  
    <!-- Personal Info Fields -->
    <div class="grid grid-cols-2 gap-4">
      <div class="mb-4">
        <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div class="mb-4">
        <%= form.label :birthdate, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :birthdate, class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
     <div class="field">
    <%= form.label :address, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :address,class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
  </div>
  <div class="field">
    <%= form.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :phone_number,  class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
  </div>
   <div class="field">
    <%= form.label :gender, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :gender,  ['Male', 'Female', 'Transgender'], {}, {class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"}  %>
  </div>
   <div class="field">
    <%= form.label :marital_status, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :marital_status, class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"  %>
  </div>
  <div class="field">
    <%= form.label :nationality, class: "block text-sm font-medium text-gray-700"  %>
    <%= form.text_field :nationality, class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"  %>
  </div>
   <div class="field">
    <%= form.label :emergency_contact, class: "block text-sm font-medium text-gray-700"  %>
    <%= form.text_field :emergency_contact, class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
  </div>
  <div class="field">
    <%= form.label :emergency_contact_relationship, class: "block text-sm font-medium text-gray-700"  %>
    <%= form.text_field :emergency_contact_relationship, class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
  </div>
    </div>

    <!-- Submit Button -->
    <div class="text-right mt-4">
      <%= form.submit 'Save Personal Info', class: "px-4 py-2 bg-indigo-600 text-white rounded-md shadow-md hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>

  