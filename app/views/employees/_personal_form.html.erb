<!-- app/views/employees/_personal_form.html.erb -->
<%= form_with(model: employee, url: personal_info_employee_path(employee), method: :put) do |form| %>
  <!-- Personal Info Fields -->
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :birthdate %>
    <%= form.date_field :birthdate %>
  </div>
  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address %>
  </div>
  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>
  <div class="field">
    <%= form.label :gender %>
    <%= form.text_field :gender %>
  </div>
  <div class="field">
    <%= form.label :marital_status %>
    <%= form.text_field :marital_status %>
  </div>
  <div class="field">
    <%= form.label :nationality %>
    <%= form.text_field :nationality %>
  </div>
  <div class="field">
    <%= form.label :emergency_contact %>
    <%= form.text_field :emergency_contact %>
  </div>
  <div class="field">
    <%= form.label :emergency_contact_relationship %>
    <%= form.text_field :emergency_contact_relationship %>
  </div>
  <!-- Submit Button -->
  <div class="actions">
    <%= form.submit 'Save Personal Info' %>
  </div>
<% end %>
