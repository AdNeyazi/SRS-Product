<!-- app/views/employees/show.html.erb -->
<div class="max-w-lg mx-auto mt-8 bg-white rounded-lg shadow-lg">
  <div class="p-6">
    <h1 class="text-2xl font-semibold mb-6 text-center">Employee Details</h1>

    <div class="mb-8">
      <div class="flex justify-between mb-4">
        <div>
          <h2 class="text-lg font-semibold mb-2">Personal Info</h2>
          <p><span class="font-semibold">Name:</span> <%= @employee.name %></p>
          <p><span class="font-semibold">Email:</span> <%= @employee.email %></p>
        </div>
        <div class="flex items-center">
          <%= link_to 'Educational Info', educational_info_employee_path(@employee), class: "btn-primary mr-2" %>
          <%= link_to 'Personal Info', personal_info_employee_path(@employee), class: "btn-primary" %>
        </div>
      </div>

      <div class="border-b border-gray-300"></div>

      <div class="mt-8">

      </div>
    </div>

    <div class="flex justify-center">
      <%= link_to 'Edit', edit_employee_path(@employee), class: "btn-primary mr-2" %>
      <%= link_to 'Back', employees_path, class: "btn-secondary" %>
    </div>
  </div>
</div>
