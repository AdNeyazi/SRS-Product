<%= content_tag :table, class: "w-full border-collapse border border-gray-200" do %>
  <thead class="bg-gray-50">
    <tr>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border border-gray-200">Id</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border border-gray-200">Name</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border border-gray-200">Email</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border border-gray-200">Show</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <% @employees.each do |employee| %>
      <tr>
        <td class="px-6 py-4 whitespace-nowrap border border-gray-200 text-center"><%= employee.id %></td>
        <td class="px-6 py-4 whitespace-nowrap border border-gray-200 text-center"><%= employee.name %></td>
        <td class="px-6 py-4 whitespace-nowrap border border-gray-200 text-center"><%= employee.email %></td>
        <td class="px-6 py-4 whitespace-nowrap border border-gray-200 text-center">
          <%= link_to 'Show', employee_path(employee), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% if current_user.company? %>
  <div class="my-4 text-center">
    <%= link_to 'New employee', new_employee_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
