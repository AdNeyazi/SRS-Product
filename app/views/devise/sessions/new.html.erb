

<div class="h-screen flex items-center justify-center mx-auto mt-8" style="background-image: url('https://img.freepik.com/free-vector/cloudy-blue-background_53876-82143.jpg?size=626&ext=jpg&ga=GA1.1.1315819444.1707661463&semt=ais'); background-position: center; max-width: 100% !important;">
    <div class="max-w-md mx-auto mb-4 p-8 border rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <label class="inline-flex items-center">
            <%= f.check_box :remember_me, class: "form-checkbox h-5 w-5 text-indigo-600" %>
            <span class="ml-2 text-gray-700 text-sm font-bold">Remember me</span>
          </label>
        </div>
      <% end %>

      <div class="flex justify-center">
        <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-700 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
