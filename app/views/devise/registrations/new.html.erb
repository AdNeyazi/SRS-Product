

<div class="h-screen flex items-center justify-center mx-auto mt-8" style="background-image: url('https://img.freepik.com/free-vector/cloudy-blue-background_53876-82143.jpg?size=626&ext=jpg&ga=GA1.1.1315819444.1707661463&semt=ais'); background-position: center; max-width: 100% !important;">
<div class="max-w-md mx-auto p-8 border rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-gray-500 text-sm">(Minimum <%= @minimum_password_length %> characters)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg mt-1" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg" %>
    </div>

    <div class="flex justify-center">
      <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-dark font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>