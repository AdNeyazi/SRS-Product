<div class="max-w-md mx-auto mt-10 bg-white p-8 border rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold mb-4">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, "New password", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-gray-500 text-sm">(Minimum <%= @minimum_password_length %> characters)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg mt-1" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm new password", class: "block text-gray-700 text-sm font-bold mb-2" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg" %>
    </div>

    <div class="flex justify-center">
      <%= f.submit "Change my password", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
